{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "dev": "run-p dev:local",
    "dev:local": "cross-env NODE_ENV=development dotenv -e .env.local run-p dev:common",
    "dev:stg": "cross-env NODE_ENV=production dotenv -e .env.stg run-p dev:common",
    "dev:prd": "cross-env NODE_ENV=production dotenv -e .env.prd run-p dev:common",
    "dev:common": "run-p dev:common:*",
    "dev:common:next": "next dev",
    "dev:common:gen": "pathpida --enableStatic --output ./src/gen/ --watch",
    "build": "run-p build:local",
    "build:common": "run-s build:common:gen build:common:next",
    "build:local": "cross-env NODE_ENV=development dotenv -e .env.local run-p build:common",
    "build:stg": "cross-env NODE_ENV=production dotenv -e .env.stg run-p build:common",
    "build:prd": "cross-env NODE_ENV=production dotenv -e .env.prd run-p build:common",
    "build:common:next": "next build",
    "build:common:gen": "pathpida --enableStatic --output ./src/gen/",
    "start": "next start",
    "lint": "next lint",
    "mock": "prism mock ../docs/openapi.yml -d -p 8080",
    "oas:validate": "cd .. && make validate-api-client",
    "oas:gen": "cd .. && make generate-api-client",
    "format": "run-p format:*",
    "format:eslint": "next lint --ignore-path .gitignore --fix",
    "format:prettier": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json}'"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@line/liff": "2.25.0",
    "@line/liff-inspector": "^1.0.2",
    "@line/liff-mock": "^1.0.3",
    "@stoplight/prism-cli": "4.10.5",
    "@tanstack/react-query": "^5.52.0",
    "@tanstack/react-query-devtools": "^5.52.0",
    "@types/mapbox-gl": "^3.4.0",
    "cross-env": "7.0.3",
    "dotenv-cli": "^8.0.0",
    "fetch-intercept": "2.4.0",
    "framer-motion": "^11.3.8",
    "install": "^0.13.0",
    "isomorphic-fetch": "3.0.0",
    "jotai": "^2.9.1",
    "jwt-decode": "^4.0.0",
    "mapbox-gl": "^3.7.0",
    "next": "14.2.5",
    "npm-run-all": "^4.1.5",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "7.42.1",
    "react-icons": "^5.2.1",
    "react-map-gl": "^7.1.7"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.52.0",
    "@types/isomorphic-fetch": "^0.0.39",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "eslint": "^8.10.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "3.0.0",
    "eslint-plugin-unused-imports": "^4.1.3",
    "pathpida": "^0.22.0",
    "prettier": "^3.3.3",
    "prettier-plugin-sort-json": "^4.0.0",
    "typescript": "^5"
  },
  "volta": {
    "node": "21.1.0",
    "yarn": "1.22.0"
  }
}
